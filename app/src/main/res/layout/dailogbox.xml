<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_marginLeft="@dimen/margin_10sp"
    android:layout_marginBottom="@dimen/margin_10sp"
    android:layout_height="match_parent">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/imgproduct"
        android:layout_width="@dimen/image_100dp"
        android:layout_height="@dimen/image_100dp"
        android:layout_below="@+id/view"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/margin_10sp"
        app:civ_border_color="#808080"
        android:scaleType="fitXY"
        app:civ_border_width="1dp" />

    <androidx.appcompat.widget.AppCompatImageView
        android:layout_width="27dp"
        android:layout_height="27dp"
        android:id="@+id/img_close"
        android:layout_alignParentEnd="true"
        android:layout_margin="@dimen/margin_7sp"
        android:src="@drawable/ic_baseline_cancel_24"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginBottom="5dp"
        android:layout_marginRight="40dp"
        android:id="@+id/view"
        android:background="@color/black"
        android:layout_below="@+id/txt_id"
        />

    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:layout_marginTop="10dp"
        android:layout_marginLeft="@dimen/margin_10sp"
        android:id="@+id/txt_id"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textColor="@color/black"
        android:textStyle="bold"
        android:layout_marginTop="@dimen/margin_5sp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/margin_10sp"
        android:layout_below="@+id/imgproduct"
        android:id="@+id/txt_productAuthor"/>
</RelativeLayout>